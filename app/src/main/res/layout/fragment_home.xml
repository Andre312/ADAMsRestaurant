<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!--    <TextView-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:textSize="30dp"-->
<!--        android:text="Home"-->
<!--        android:layout_centerInParent="true"></TextView>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_home_hours"
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opening Hours"
            android:textColor="#000000"
            android:textSize="22dp"></TextView>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_openinghours"
            android:layout_below="@id/tv_home_hours"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:text="Mon-Fri 10am - 10pm\nSat-Sun 9am-11pm">
        </TextView>

        <TextView
            android:id="@+id/tv_home_location"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:text="Location"
            android:textSize="22dp"></TextView>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_location"
            android:layout_below="@id/tv_home_location"
            android:textColor="#000000"
            android:inputType="textMultiLine"
            android:text="St. George's Road\nSpinola Bay St Julians,\nSTJ3208">
        </TextView>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_map"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="293dp"
        app:srcCompat="@drawable/ic_launcher_background" />

    <Button
        android:id="@+id/btn_circle_pickUp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="140dp"
        android:background="@drawable/button_bg_round"
        android:padding="10dp"
        android:text="Pick Up"
        android:textColor="#FFFF"
        android:textSize="28dp"
        android:layout_alignParentLeft="true"></Button>

    <Button
        android:id="@+id/btn_circle_delivery"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignRight="@id/btn_circle_pickUp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="140dp"
        android:background="@drawable/button_bg_round"
        android:padding="10dp"
        android:textColor="#FFFF"
        android:textSize="28dp"
        android:text="Delivery"></Button>

</RelativeLayout>